<form action="/signup" method="POST">
  <div class="form-group mx-auto " style="width: 30%;">
    <label for="inlineFormInput" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control {{valid.user}}" name="username">
      <div class="invalid-feedback">
        {{status}}
      </div>
    </div>
  </div>
  <div class="form-group mx-auto " style="width: 30%;">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="email" class="form-control {{valid.email}}" id="inputEmail3" name="email">
      <div class="invalid-feedback">
        {{status}}
      </div>
    </div>
  </div>
  <div class="form-group mx-auto " style="width: 30%;">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Phone</label>
    <div class="col-sm-10">
      <input type="tel" pattern="[+][7]\d{10}" placeholder="+79999999999" class="form-control" id="inputEmail3"
        name="phone">
      <div class="invalid-feedback">
        {{status}}
      </div>
    </div>
  </div>
  <div class="form-group mx-auto" style="width: 30%;">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inputPassword3" name="password">
    </div>
  </div>
  <div class="form-group mx-auto" style="width: 30%;">
    <div class="col-sm-10">
    </div>
  </div>
  <div class="form-group mx-auto" style="width: 30%;">
    <div class="col-sm-10">
      <input class="btn btn-primary" type="submit" value="Sign Up" />
    </div>
  </div>
</form>
