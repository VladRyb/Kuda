<form action="/user/update" method="POST">
  <div class="form-group mx-auto " style="width: 30%;">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="email" class="form-control " id="inputEmail3" name="email" value="{{user.email}}">
      <div class="invalid-feedback">
        {{status}}
      </div>
    </div>
  </div>
  <div class="form-group mx-auto " style="width: 30%;">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Phone</label>
    <div class="col-sm-10">
      <input type="tel" pattern="[+][7]\d{10}" placeholder="+79999999999" class="form-control" id="inputEmail3"
        name="phone" value="{{user.phone}}">
      <div class="invalid-feedback">
        {{status}}
      </div>
    </div>
  </div>
  <div class="form-group mx-auto" style="width: 30%;">
    <div class="col-sm-10">
      <input class="btn btn-primary" type="submit" value="Save" />
    </div>
  </div>
</form>
